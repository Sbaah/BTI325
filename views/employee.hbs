<div class="row">
    <div class="col-md-12">
        {{#each viewData.data}}
        <h1>{{firstName}} {{last_name}} - Employee: {{employeeNum}}</h1>

        <form method="post" action="/employees/update">

            <input name="employeeNum" value="{{employeeNum}}" type="hidden">

            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" value="{{firstName}}" type="text">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="last_name">Last Name:</label>
                            <input class="form-control" id="last_name" name="last_name" value="{{last_name}}" type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" value="{{email}}" type="text">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" id="SSN" name="SSN" value="{{SSN}}" readonly="" type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" value="{{addressStreet}}" type="text">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="addresCity">Address (City):</label>
                        <input class="form-control" id="addresCity" name="addresCity" value="{{addresCity}}" type="text">
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" id="addressState" name="addressState" value="{{addressState}}" type="text">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input class="form-control" id="addressPostal" name="addressPostal" value="{{addressPostal}}" type="text">
                        </div>
                    </div>
                </div>


            </fieldset>

            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input class="form-control" id="isManager" name="isManager" {{#if isManager}} checked {{/if}} type="checkbox">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" value="{{employeeManagerNum}}" type="text">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label>
                            <br>
                            <label class="checkbox-inline">
                                <input id="statusFT" name="status" {{#equal status "Full Time"}} checked {{/equal}} value="Full Time" type="radio"> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input id="statusPT" name="status" {{#equal status "Part Time"}} checked {{/equal}} value="Part Time" type="radio"> Part Time
                            </label>
                        </div>
                    </div>
                    {{/each}}
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            {{#if viewData.departments}}
                            <select class="form-control" name="department" id="department">
                                {{#each viewData.departments}}
                                <option value="{{departmentId}}" {{#if selected}} selected {{/if}}>{{departmentName}} </option>
                                {{/each}}
                            </select>
                            {{else}}
                            <div>No Departments</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            {{#each viewData.data}}
                            <input class="form-control" id="hireDate" name="hireDate" value="{{hireDate}}" readonly="" type="text"> {{/each}}
                        </div>
                    </div>
                </div>

            </fieldset>

            <hr>
            <div class="inner-addon right-addon">
                <input class="btn btn-primary pull-right" value="Update Employee &nbsp;&nbsp;" type="submit">
                <i class="glyphicon glyphicon-pencil"> </i>
            </div>
            <br>
            <br>
            <br>
        </form>
    </div>
</div>
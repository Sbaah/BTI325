<div class="row">
    <section class="main col-md-12">
        <article>
            <h2>Oleksii is a software developer.</h2>
            <p>Technical skills such as Python, C, C++, C#, Java, React, Angular, SQL.</p>
        </article>
    </section>
</div>

<div class="row">

    <div class="col-md-12">
        <h3>Leave a Comment</h3>
        <form action="/about/addComment" method="POST">
            <div class="well">
                <div class="row">
                    <div class="col-md-6">
                        <input class="form-control" placeholder="Name" name="authorName" type="text">
                        <br>
                    </div>
                    <div class="col-md-6">

                        <input class="form-control" placeholder="Email" name="authorEmail" type="email">
                        <br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input class="form-control" placeholder="Subject" name="subject" type="text">
                        <br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <textarea class="form-control" rows="8" placeholder="Comment" name="commentText"></textarea>
                        <br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-md-offset-10">
                        <button type="submit" class="btn btn-primary form-control"> <span class="glyphicon glyphicon-comment"></span> &nbsp;&nbsp;Comment</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{{#if data}}
<div class="row">
    <div class="col-md-12">
        <h3>All Comments</h3>
        <hr />
    </div>
</div>
{{/if}} {{#each data}}
<div class="row">
    <div class="col-md-12">
        <h3>{{subject}}</h3>
        <div class="well">
            <div class="row">
                <div class="col-md-12">
                    {{commentText}}
                    <br>
                    <br> Posted on: {{postedDate}} by
                    <a href="mailto:{{authorEmail}}">{{authorName}}</a>
                    <br>
                    <br>
                </div>
            </div>
            {{#each replies}}
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        {{commentText}}
                        <br>
                        <br>Posted on: {{repliedDate}} by
                        <a href="mailto:{{authorEmail}}">{{authorName}}</a>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#reply-{{_id}}" aria-expanded="false"><span class="glyphicon glyphicon-comment"></span> &nbsp;&nbsp;Reply</button>
                </div>
            </div>
        </div>

        <div class="collapse" id="reply-{{_id}}">
            <form action="/about/addReply" method="POST">
                <div class="well">
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" placeholder="Name" name="authorName" type="text">
                            <br>
                        </div>
                        <div class="col-md-6">

                            <input class="form-control" placeholder="Email" name="authorEmail" type="email">
                            <br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <textarea class="form-control" rows="8" placeholder="Comment" name="commentText"></textarea>
                            <br>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 col-md-offset-10">
                            <input value="{{_id}}" name="comment_id" type="hidden">
                            <button type="submit" class="btn btn-primary form-control">Reply</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
{{/each}}